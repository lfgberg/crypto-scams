    background-repeat: no-repeat
    background-position: center
    background-size: 12px

  .tooltip
    position: absolute
    top: 50%
    left: 110%
    transform: translateY(-50%)
    background-color: $color-background
    color: $color-text
    border: 1px solid $color-border
    border-radius: 5px
    padding: 10px
    font-size: 0.9rem
    line-height: 1.4
    width: 250px
    display: none
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1)
    z-index: 10

    &::before
      content: ''
      position: absolute
      top: 50%
      left: -10px
      transform: translateY(-50%)
      border-width: 5px
      border-style: solid
      border-color: transparent $color-border transparent transparent

  &:hover .tooltip
    display: block

.checklist-section {
  margin-bottom: 2rem;
  padding: 1rem;
  border: 1px solid $color-border;
  border-radius: 5px;
  background-color: lighten($color-background, 5%);
}

.checklist-section h3 {
  margin-top: 0;
  font-size: 1.5rem;
  color: $color-primary;
}

.checklist-section p {
  font-size: 1rem;
  margin-bottom: 1rem;
  color: $color-meta;
}
