<script>
  document.addEventListener("DOMContentLoaded", function () {
    const checkboxes = document.querySelectorAll("input[type='checkbox']");
    const resultBox = document.getElementById("result");
    const resourceLinks = {
      "anonymous": "https://example.com/anonymous-team",
      "no-whitepaper": "https://example.com/no-whitepaper",
      "guarenteed-returns": "https://example.com/guarenteed-returns",
      "big-promises": "https://example.com/big-promises"
    };

    let redFlagCount = 0;

    function checkRiskLevel(redFlagCount) {
      // Currently there's 21 red flags
      const lowRiskThreshold = 0;
      const medRiskThreshold = 3;
      const highRiskThreshold = 5;
      const critRiskThreshold = 7;

      if (redFlagCount >= lowRiskThreshold && redFlagCount < medRiskThreshold){
        return 0;
      } else if (redFlagCount >= medRiskThreshold && redFlagCount < highRiskThreshold){
        return 1;
      } else if (redFlagCount >= highRiskThreshold && redFlagCount < critRiskThreshold){
        return 2;
      } else return 3;
    }

    const riskLevels = {
      0: "Low Risk: Minimal or no red flags.",
      1: "Medium Risk: Proceed with caution. Some red flags exist.",
      2: "High Risk: Likely a scam. Avoid interacting with this project.",
      3: "Critical Risk: Almost definitely a scam, do not interact with this project."
    };

    checkboxes.forEach((checkbox) => {
      checkbox.addEventListener("change", function () {
        updateResult();
      });
    });

    function updateResult() {
      redFlagCount = 0;

      const selectedNames = [];
      checkboxes.forEach((checkbox) => {
        if (checkbox.checked) {
          selectedNames.push(checkbox.name);
        }
      });

      // Get the general risk level based on the number of flags selected
      redFlagCount = selectedNames.length;
      riskLevel = checkRiskLevel(redFlagCount);

      // Some of these are automatic high or critical - no legit project is going to do this
      if (selectedNames.includes("private-key") || selectedNames.includes("withdrawal") || selectedNames.includes("FDIC")){
        riskLevel = 3;
      }

      if (redFlagCount > 0){
        const riskMessage = riskLevels[riskLevel];

        resultBox.innerHTML = `<p><strong>${riskMessage}</strong></p>
        <a href="/common-scams" target="_self" rel="noopener noreferrer" class="cta-button">Learn More</a>
        `;
        resultBox.style.display = "block";
      } else {
        resultBox.style.display = "none"; // Hide the result box if no options are selected
      }
    }
  });
</script>